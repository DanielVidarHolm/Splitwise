<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('../partials/head.ejs') %>

        <title>Splitwise | Tip calculator app</title>
    </head>
    <body>
        <div class="page-wrapper">
           
                
            

            <main class='main'>
				<header class='img-container'>
					<img src="images/logo.svg" />
				</header>
                <section class='container'>
					<section class='card-left col-6'>
						
						<div class='field'>
							<div class='sep'>
								<label class='clear-dark' for="bill">Bill</label>
								<span id="peopleErrorText1" class='danger hidden'>Can't be zero</span>
							</div>
							<div class='rel'>
								<input type="number" name="bill" id="bill" placeholder='0' />
								<img class='icon' src='images/icon-dollar.svg'>
							</div>
						</div>
						<div class='field'>
							<label class='clear-dark'>Select Tip</label>
							<fieldset class='field-radio'>
								<div class='rel'>
									<input id='p5' type="radio" name="tip" value="5" />
									<label for='p5'>5%</label>
								</div>
								<div class='rel'>
									<input id='p10' type="radio" name="tip" value="10" />
									<label for='p10'>10%</label>
								</div>
								<div class='rel'>
									<input id='p15' type="radio" name="tip" value="15" />
									<label for='p15'>15%</label>
								</div>
								<div class='rel'>
									<input id='p25' type="radio" name="tip" value="25" />
									<label for='p25'>25%</label>
								</div>
								<div class='rel'>
									<input id='p50' type="radio" name="tip" value="50" />
									<label for='p50'>50%</label>
								</div>
								<div class='rel'>
									<input id='custom' type="number" name="tipCustom"  placeholder='Custom' />
								</div>
								
							</fieldset>
						</div>
						<div class='field' >
							<div class='sep'>
								<label class='clear-dark' for="people">Number of People</label>
								<span id="peopleErrorText2" class='danger hidden'>Can't be zero</span>
							</div>
							<div class='rel'>
								<input type="number" name="people" id="people" placeholder='0'/>
								<img class='icon' src='images/icon-person.svg'>
							</div>

						</div>
						
					</section>

					<section class='card-right col-6'>
						<main>
							<div class='output-container'>
								<div class='text'>
									<span class='clear'>Tip Amount</span>
									<span class='faded'>/ person</span>		
								</div>
								<div>
									<span class='important'>$<span id="tip">0.00</span></span>
								</div>

							</div>
							<div class='output-container'>
								<div class='text'>
									<span class='clear'>Total</span>
									<span class='faded'>/ person</span>		
								</div>
								<div>
									<span class='important'>$<span id="total">0.00</span></span>
								</div>
							</div>
						</main>
						<footer>
							<button disabled="true" class='button'>Reset</button>
						</footer>
						
					</section>
                </section>
				
            </main>

            <footer>
					<%- include('../partials/footer') %>
			</footer>
        </div>
      
          
		<script src='js/main.js'></script>
        
    </body>
</html>
